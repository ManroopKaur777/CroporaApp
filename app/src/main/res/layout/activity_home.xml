<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F8EC"
    android:padding="16dp">

    <!-- ðŸ”¹ Header Section (App Name + Profile Icon) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">
        <!-- App Logo -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_logo"   <!-- replace with your actual logo file -->
        android:contentDescription="App Logo"
        android:layout_marginEnd="8dp" />

        <!-- App Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="Cropora"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person"
            android:background="@drawable/circle_bg"
            android:padding="8dp" />
    </LinearLayout>

    <!-- ðŸ”¹ Greeting Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good Morning, Farmer"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:textColor="@android:color/holo_green_dark" />

    <!-- ðŸ”¹ Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Search"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:layout_marginTop="10dp" />

    <!-- ðŸ”¹ Feature Grid (Icons + Text) -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_marginTop="16dp">

        <!-- Pest Advisory -->
        <LinearLayout
            android:id="@+id/btnPestAdvisory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_bug_report"
                android:background="@drawable/circle_bg"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pest Advisory"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Weather -->
        <LinearLayout
            android:id="@+id/btnWeather"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_weather"
                android:background="@drawable/circle_bg"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weather"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Subsidies -->
        <LinearLayout
            android:id="@+id/btnSubsidies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_money"
                android:background="@drawable/circle_bg"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subsidies"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Crop Info -->
        <LinearLayout
            android:id="@+id/btnCropInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_crop"
                android:background="@drawable/circle_bg"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crop Info"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Market Prices -->
        <LinearLayout
            android:id="@+id/btnMarketPrices"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_market"
                android:background="@drawable/circle_bg"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Market Prices"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Government Schemes -->
        <LinearLayout
            android:id="@+id/btnSchemes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_scheme"
                android:background="@drawable/circle_bg"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schemes"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>

    </GridLayout>
